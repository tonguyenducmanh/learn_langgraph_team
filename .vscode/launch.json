{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug FastAPI with Uvicorn",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": ["api.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"],
      "console": "integratedTerminal",
      "env": {},
      "python": "${workspaceFolder}/venv/bin/python",
      "justMyCode": true
    },
    {
      "name": "Debug Streamlit (app.py)",
      "type": "debugpy",
      "request": "launch",
      "module": "streamlit",
      "args": ["run", "${workspaceFolder}/app.py"],
      "console": "integratedTerminal",
      "python": "${workspaceFolder}/venv/bin/python",
      "justMyCode": true
    }
  ],
  "compounds": [
    {
      "name": "Debug Both (API + Streamlit)",
      "configurations": [
        "Debug FastAPI with Uvicorn",
        "Debug Streamlit (app.py)"
      ]
    }
  ]
}
